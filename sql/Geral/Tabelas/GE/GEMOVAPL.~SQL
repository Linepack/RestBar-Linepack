CREATE TABLE GEMOVAPL
(
	CD_APLICACAO  VARCHAR2(8)  NOT NULL ,
	SQ_MOVTO  NUMBER(6)  NOT NULL ,
	DT_MOVTO  DATE  NOT NULL ,
	NM_PROGRAMADOR  VARCHAR2(40)  NOT NULL ,
	DS_MOVTO  VARCHAR2(2000)  NOT NULL 
);


COMMENT ON COLUMN GEMOVAPL.CD_APLICACAO IS 'Código da Aplicação';


CREATE  UNIQUE INDEX PK_GEMOVAPL ON GEMOVAPL
(
	CD_APLICACAO  ASC,
	SQ_MOVTO  ASC
)
	TABLESPACE INDICES_TABLESPACE;


ALTER TABLE GEMOVAPL
ADD CONSTRAINT  PK_GEMOVAPL PRIMARY KEY (CD_APLICACAO,SQ_MOVTO);


ALTER TABLE GEMOVAPL
ADD CONSTRAINT  FK_GEMOVAPL_GEAPLICA FOREIGN KEY (CD_APLICACAO) REFERENCES LINEPACK.GEAPLICA(CD_APLICACAO);


CREATE PUBLIC SYNONYM GEMOVAPL FOR GEMOVAPL;

GRANT ALL ON GEMOVAPL TO LINEPACK_ROLE;